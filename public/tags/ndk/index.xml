    notice {
        --title-color: #fff;
        --title-background-color: #6be;
        --content-color: #444;
        --content-background-color: #e7f2fa;
    }

    .notice.info {
        --title-background-color: #d3f6de;
        --content-background-color: #d3f6de;
    }

    .notice.tip {
        --title-background-color: #E8EAFF;
        --content-background-color: #E8EAFF;
    }

    .notice.warning {
        --title-background-color: #FEF4D8;
        --content-background-color: #FEF4D8;
    }
    
    .notice.danger {
        --title-background-color: #FFE2E7;
        --content-background-color: #FFE2E7;
    }
    
    

   

     
    .notice {
        
        padding: 1px 18px;  
        line-height: 24px;  
        margin-bottom: 24px;  
        border-radius: 18px;  
        color: var(--content-color);  
        background: var(--content-background-color);  
    }
    
    &lt;!--   --&gt;
    &lt;!-- .notice p:last-child { --&gt;
        &lt;!-- margin-bottom: 0;   --&gt;
    &lt;!-- } --&gt;
    
     
    .notice-title {
        margin: -18px -18px 12px;  
        padding: 8px 18px;  
        border-radius: 18px 18px 0 0;  
        font-weight: 700;  
        color: var(--title-color);  
        background: var(--title-background-color);  
    }
    
     
    .icon-notice {
        display: inline-flex;  
        align-self: center;  
        margin-right: 8px;  
    }
    
     
    .icon-notice img,
    .icon-notice svg {
        height: 1em;  
        width: 1em;  
        fill: currentColor;  
    }
    
     
    .icon-notice img,
    .icon-notice.baseline svg {
        top: .125em;  
        position: relative;  
    }
